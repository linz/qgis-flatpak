{
    "id": "nz.govt.linz.qgis",
    "base": "com.riverbankcomputing.PyQt.BaseApp",
    "base-version": "6.9",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "qgis",
    "rename-icon": "qgis",
    "finish-args": [
        "--env=LD_LIBRARY_PATH=/app/lib:/app/grass84/lib",
        "--env=PROJ_LIB=/app/share/proj/",
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=x11",
        "--filesystem=host",
        "--device=dri"
    ],
    "separate-locales": false,
    "build-options": {
        "env": {
            "PYTHONPATH": "/app/lib/python3.12/site-packages:/usr/lib/python3.12/site-packages"
        }
    },
    "cleanup": [
        "/lib/pkgconfig",
        "/include",
        "*.la",
        "*.a",
        "bin/mysql*",
        "grass*/docs"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "modules": [
        "modules/arrow.json",
        "modules/proj.json",
        "modules/geos.json",
        "modules/spatialindex.json",
        "modules/minizip.json",
        "modules/spatialite.json",
        "modules/postgresql.json",
        "modules/unixodbc.json",
        "modules/zstd.json",
        "modules/gdal.json",
        "modules/qca.json",
        "modules/qwt.json",
        "modules/libzip.json",
        "modules/gsl.json",
        "modules/qscintilla.json",
        "modules/python-six.json",
        "modules/python-future.json",
        "modules/python-setuptools.json",
        "modules/pyproj.json",
        "modules/PyYAML.json",
        "modules/python-owslib.json",
        "modules/python-psycopg2.json",
        "modules/gisgrass.json",
        "modules/python3-markupsafe.json",
        "modules/python3-jinja2.json",
        "modules/exiv2.json",
        "modules/protobuf.json",
        "modules/qtkeychain.json",
        "modules/Draco.json",
        {
            "name": "qgis",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qgis/qgis.git",
                    "commit": "dff0d70259e2b47e90087ce8f7ba69d9d100d7e0"
                }
            ],
            "config-opts": [
                "-DBUILD_WITH_QT6=TRUE",
                "-DENABLE_TESTS=FALSE",
                "-DWITH_3D=TRUE",
                "-DGRASS_PREFIX8=/app/grass84",
                "-DQWT_LIBRARY=/app/lib/libqwt.so",
                "-DSQLITE3_INCLUDE_DIR=/app/include",
                "-DSQLITE3_LIBRARY=/app/lib/libsqlite3.so",
                "-DUSE_OPENCL=ON",
                "-DWITH_QUICK=ON",
                "-DWITH_PDAL=FALSE",
                "-DWITH_QTWEBKIT=FALSE",
                "-DSIP_BUILD_EXTRA_OPTIONS=--target-dir=/app/lib/python3.12/site-packages"
            ],
            "post-install": [
                "mv /app/share/applications/org.qgis.qgis.desktop /app/share/applications/nz.govt.linz.qgis.desktop"
            ]
        },
        "modules/env-python.json"
    ]
}